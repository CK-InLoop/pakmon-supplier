// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

// ============================================
// Admin Panel Models
// ============================================

// Admin model for admin panel authentication
model Admin {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  name      String
  email     String   @unique
  password  String
  role      String   @default("admin")
  createdAt DateTime @default(now()) @db.Date
  updatedAt DateTime @updatedAt @db.Date
}

// ============================================
// Supplier Portal Models (Existing + Enhanced)
// ============================================

// Supplier model - enhanced with admin panel fields
model suppliers {
  id           String  @id @default(auto()) @map("_id") @db.ObjectId
  userId       String  @unique @db.ObjectId // Link to users table
  user         users   @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  name         String?
  email        String? @unique
  password     String
  companyName  String?
  phone        String?
  contactPhone String? // Alternative contact phone
  address      String?
  city         String?
  state        String?
  pincode      String?
  gstNumber    String?
  description  String?
  profileImage String?

  // Admin panel fields
  verified Boolean @default(false)
  status   String  @default("PENDING") // PENDING, APPROVED, REJECTED

  createdAt DateTime @default(now()) @db.Date
  updatedAt DateTime @updatedAt @db.Date

  // Relations
  products  products[]
  inquiries inquiries[]
  liked     liked[]
}

// Product model - enhanced with all necessary fields
model products {
  id         String    @id @default(auto()) @map("_id") @db.ObjectId
  supplierId String    @db.ObjectId
  supplier   suppliers @relation(fields: [supplierId], references: [id], onDelete: Cascade)

  // Basic info
  name             String?
  title            String?  // Display title
  category         String
  description      String
  shortDescription String?  // Brief summary
  fullDescription  String?  // Detailed description
  specifications   String?  // Technical specifications
  
  // Pricing
  price        Float?
  priceRange   String?  // Text-based price range (e.g., "₹50,000 - ₹1,00,000")
  capacity     String?  // Product capacity (e.g., "2000 L/day")
  unit         String?
  minOrderQty  Float?
  availability String  @default("available") // available, out_of_stock

  // Additional product details
  tags      String[]
  images    String[]
  documents String[]
  pdfFiles  String[] // PDF documents/brochures
  youtubeUrl String?  // YouTube video URL for product demo/overview

  // Status tracking
  status          String  @default("PENDING") // PENDING, APPROVED, REJECTED
  rejectionReason String?

  // Metadata
  views           Int @default(0)
  recommendations Int @default(0) // how many times recommended by chatbot

  createdAt DateTime @default(now()) @db.Date
  updatedAt DateTime @updatedAt @db.Date

  // Relations
  chatReferences chat_product_references[]
  liked          liked[]
  inquiries      inquiries[]
}

// Inquiry model - customer inquiries to suppliers
model inquiries {
  id         String    @id @default(auto()) @map("_id") @db.ObjectId
  supplierId String    @db.ObjectId
  supplier   suppliers @relation(fields: [supplierId], references: [id], onDelete: Cascade)
  productId  String?   @db.ObjectId
  product    products? @relation(fields: [productId], references: [id], onDelete: SetNull)

  customerName  String
  customerEmail String
  customerPhone String?
  message       String
  productName   String?

  status String @default("new") // new, contacted, converted, closed

  createdAt DateTime @default(now()) @db.Date
  updatedAt DateTime @updatedAt @db.Date
}

// ============================================
// Chat/Customer Query Models
// ============================================

// Customer Query model - logs from chatbot interactions
model CustomerQuery {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  query     String
  response  String
  products  String[] // productIds recommended
  metadata  Json? // additional metadata like user location, context, etc.
  createdAt DateTime @default(now()) @db.Date

  @@map("customer_queries")
}

// Chat sessions
model chats {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  sessionId String?
  userId    String?  @db.ObjectId
  messages  Json[]
  createdAt DateTime @default(now()) @db.Date
  updatedAt DateTime @updatedAt @db.Date

  @@index([sessionId])
}

// Chat product references - products mentioned in chats
model chat_product_references {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  chatId      String?  @db.ObjectId
  productId   String   @db.ObjectId
  product     products @relation(fields: [productId], references: [id], onDelete: Cascade)
  mentioned   Boolean  @default(false)
  recommended Boolean  @default(false)
  createdAt   DateTime @default(now()) @db.Date
}

// Liked products (by customers or users)
model liked {
  id         String     @id @default(auto()) @map("_id") @db.ObjectId
  userId     String?    @db.ObjectId
  supplierId String?    @db.ObjectId
  supplier   suppliers? @relation(fields: [supplierId], references: [id], onDelete: Cascade)
  productId  String?    @db.ObjectId
  product    products?  @relation(fields: [productId], references: [id], onDelete: Cascade)
  createdAt  DateTime   @default(now()) @db.Date
  likedAt    DateTime   @default(now()) @db.Date

  @@unique([userId, productId])
}

// ============================================
// Admin Panel Specific Models
// ============================================

// Audit Log model - track admin actions
model AuditLog {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  adminId    String   @db.ObjectId
  adminEmail String
  action     String // e.g. "approveSupplier", "deleteProduct", "rejectProduct"
  targetType String // "supplier", "product", "system"
  targetId   String?  @db.ObjectId
  details    Json? // additional details about the action
  timestamp  DateTime @default(now()) @db.Date

  @@map("audit_logs")
}

// System Settings model (optional - for global configurations)
model SystemSetting {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  key       String   @unique
  value     Json
  updatedAt DateTime @updatedAt @db.Date

  @@map("system_settings")
}

// ============================================
// Authentication Models (NextAuth / Custom Auth)
// ============================================

// User accounts (for NextAuth or custom auth)
model users {
  id            String    @id @default(auto()) @map("_id") @db.ObjectId
  name          String?
  email         String?   @unique
  password      String?   // For credentials-based auth
  role          String    @default("SUPPLIER") // SUPPLIER, ADMIN, SUPER_ADMIN
  emailVerified DateTime? @db.Date
  image         String?
  createdAt     DateTime  @default(now()) @db.Date
  updatedAt     DateTime  @updatedAt @db.Date

  accounts accounts[]
  sessions sessions[]
  supplier suppliers? // 1:1 relation to supplier profile
}

// OAuth accounts
model accounts {
  id                String  @id @default(auto()) @map("_id") @db.ObjectId
  userId            String  @db.ObjectId
  user              users   @relation(fields: [userId], references: [id], onDelete: Cascade)
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  @@unique([provider, providerAccountId])
}

// User sessions
model sessions {
  id           String   @id @default(auto()) @map("_id") @db.ObjectId
  sessionToken String   @unique
  userId       String   @db.ObjectId
  user         users    @relation(fields: [userId], references: [id], onDelete: Cascade)
  expires      DateTime @db.Date
}

// Verification tokens
model verification_tokens {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  identifier String
  token      String   @unique
  expires    DateTime @db.Date

  @@unique([identifier, token])
}
